<AnchorPane fx:id="panel" prefHeight="400.0" prefWidth="321.0" style="-fx-background-color: #000000;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.PriceChangeController">
   <children>
      <AnchorPane layoutX="3.0" layoutY="4.0" prefHeight="392.0" prefWidth="313.0" style="-fx-background-color: #ffffff;">
         <children>
            <ImageView fitHeight="392.0" fitWidth="313.0" layoutX="1.0" opacity="0.66">
               <image>
                  <Image url="@img/103719507-paddy-seeds-in-wooden-bowl-on-white-background.jpg" />
               </image>
            </ImageView>
            <Label layoutX="31.0" layoutY="52.0" style="-fx-background-color: #e0e0e0;" text="Paddy Variety:">
               <font>
                  <Font name="Bodoni MT Bold" size="18.0" />
               </font>
            </Label>
            <ComboBox fx:id="combo" layoutX="150.0" layoutY="51.0" prefWidth="150.0" promptText="Choose One" />
            <Label layoutX="21.0" layoutY="141.0" style="-fx-background-color: #e0e0e0;" text="New Price (LKR):">
               <font>
                  <Font name="Bodoni MT Bold" size="15.0" />
               </font>
            </Label>
            <JFXTextField fx:id="newPriceTxt" layoutX="142.0" layoutY="137.0" prefHeight="26.0" prefWidth="158.0" style="-fx-background-color: #e0e0e0;" />
            <Button fx:id="updateBtn" layoutX="116.0" layoutY="211.0" mnemonicParsing="false" style="-fx-background-color: #f0f4c3; -fx-background-radius: 25%;" text="Update">
               <font>
                  <Font name="Bodoni MT Bold" size="18.0" />
               </font>
               <effect>
                  <DropShadow />
               </effect>
            </Button>
            <Button fx:id="seenowBtn" layoutX="116.0" layoutY="274.0" mnemonicParsing="false" onAction="#seeNow" style="-fx-background-color: #f0f4c3; -fx-background-radius: 25%;" text="See now">
               <font>
                  <Font name="Bodoni MT Bold" size="16.0" />
               </font>
               <effect>
                  <DropShadow />
               </effect>
            </Button>
            <Button fx:id="exitBtn" layoutX="287.0" layoutY="1.0" mnemonicParsing="false" onAction="#logout" prefHeight="15.0" prefWidth="25.0" style="-fx-background-color: #b91e1e; -fx-background-radius: 75%;" text="X" textFill="WHITE" />
            <Button fx:id="clrBtn" layoutX="21.0" layoutY="344.0" mnemonicParsing="false" onAction="#Clear" style="-fx-background-color: #f0f4c3; -fx-background-radius: 25%;" text="Clear">
               <font>
                  <Font name="Bodoni MT Bold" size="13.0" />
               </font>
               <effect>
                  <DropShadow />
               </effect>
            </Button>
            <Button fx:id="mainMenuBtn" layoutX="225.0" layoutY="344.0" mnemonicParsing="false" onAction="#main" style="-fx-background-color: #f0f4c3; -fx-background-radius: 25%;" text="Main Menu">
               <font>
                  <Font name="Bodoni MT Bold" size="13.0" />
               </font>
               <effect>
                  <DropShadow />
               </effect>
            </Button>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
